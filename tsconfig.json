{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
	  "paths": {
	      "@/*": ["./src/*"]
	    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types" ,
	  "uni-modules/uview-plus/types"// 确保包含 uni-app 的类型定义
    ]
  },
  "exclude": [
    "node_modules",
    "unpackage",
    "src/**/*.nvue" // 排除 nvue 文件，根据项目实际情况调整
  ]
}