{
	"easycom": {
		"autoscan": true,
		// 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
		"custom": {
			// "^u--(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "@/uni_modules/uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/link/link",
			"style": {
				"navigationBarTitleText": "喜欢"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		},
		{
			"path": "pages/detail/detail",
			"style": {
				"navigationStyle": "custom", // 隐藏系统导航栏
				"navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		},
		{
			"path" : "pages/line/line",
			"style" : 
			{
				"navigationBarTitleText" : ""
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#2867CE",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "/static/tabBar/home.png",
				"selectedIconPath": "/static/tabBar/homeSelected.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/link/link",
				"iconPath": "/static/tabBar/like.png",
				"selectedIconPath": "/static/tabBar/linkSelected.png",
				"text": "喜欢"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "/static/tabBar/my.png",
				"selectedIconPath": "/static/tabBar/myindex.png",
				"text": "我的"
			}

		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "首页",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"

	},
	"uniIdRouter": {}
}